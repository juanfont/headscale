// This ACL is a very basic example to validate the 
// expansion of hosts


{
    "hosts": {
        "host-1": "100.100.100.100",
        "subnet-1": "100.100.101.100/24",
    },

    "acls": [
        {
            "action": "accept",
            "src": [
                "subnet-1",
                "192.168.1.0/24"
            ],
            "dst": [
                "*:22,3389",
                "host-1:*",
            ],
        },
    ],
}